{{!
    @template urcourses_default/header_course_style_chooser
    This template renders the course header style chooser buttons.
}}

<div class="col-md-6" id="theme_urcourses_default_header_course_enrolment_{{uniqid}}">
	<div class="btn-group">
	<button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
		<i class="fa fa-plug" aria-hidden="true"></i>
			<span id="enrollment_span">
				Enrolment: 
				{{#active}}
					{{active}}
				{{/active}}
				{{^active}}
					TBD
				{{/active}}
			</span>
		</button>
		<div class="dropdown-menu dropdown-menu-right">
		<h6 class="dropdown-header">Select a Term</h6>
		
		<div class="dropdown-divider"></div>
		
		{{#semesters}}
			<button class="dropdown-item btn_enrolterm ml-1" type="button" id="{{id}}">{{title}}</button>
		{{/semesters}}
			
		</div>
	</div>
</div>

{{#js}}
    require(['theme_urcourses_default/course_enrolment'], function(main) {
        main.init('#theme_urcourses_default_header_course_enrolment_{{uniqid}}', {{{course}}},{{{semesterdates}}},{{{categories}}}, {{{templatelist}}});
    });
{{/js}}