{{< theme_uofr_conservatory/modal_help_content}}
{{$content}}
    <div class="list-group-flush">
        {{#results}}
            <div class="list-group-item">
                <div class="mb-2">
                    <h3 class="mb-0">
                        <a href="#" data-url="{{{url}}}" data-title="{{page-title}}" class="modal-help-search-result">
                            {{#search-prefix}}{{{search-prefix}}}: {{/search-prefix}}{{{page-title}}}
                        </a>
                    </h3>
                    <div class="d-flex flex-column">
                        <small>{{page-date}} (Modified {{page-modified-date}})</small>
                    </div>
                </div>
                <p class="mb-0">
                    {{excerpt}}
                </p>
            </div>
        {{/results}}

        {{^results}}
            <h3>No Results Found</h3>
            <p>No results were found for the term <strong>{{query}}</strong></p>
        {{/results}}
    </div>
{{/content}}
{{/ theme_uofr_conservatory/modal_help_content}}
