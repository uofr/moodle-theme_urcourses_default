{{!
    @template theme_urcourses_default/full_header

    This template renders the header.

    Example context (json):
    {
        "contextheader": "context_header_html",
        "settingsmenu": "settings_html",
        "hasnavbar": false,
        "navbar": "navbar_if_available",
        "courseheader": "course_header_html"
    }

    Page header.
}}
{{! MODIFICATION:
    * Changed the order of the settingsmenu item.
}}

<header id="page-header" class="row">
    <div class="col-12 pt-3 pb-3">
        <div class="card {{^contextheader}}border-0 bg-transparent{{/contextheader}}">
            <div id="hdr_chooser_b_div" class="card-body {{^headerstyle}} style-a {{/headerstyle}} {{^contextheader}}p-2{{/contextheader}} header-body" style="background-image:url({{{courseimage}}}); background-size:cover; background-position:center;"> 
                <div class="d-flex page-head">
                    {{#contextheader}}
                    <div id="{{^headerstyle}}header_a_head{{/headerstyle}}{{#headerstyle}}header_b_head{{/headerstyle}}" class="flex-row flex-grow-1">
                            <div id="hdr_chooser_a_div" class="course-image {{#headerstyle}}d-none{{/headerstyle}}" style="background-image:url({{{courseimage}}});"></div>
                        <div class="course-head mr-auto">
                            <div class="facultydep">
                                <h5>{{{facultydep}}}</h5>
                            </div>
                            {{{contextheader}}}
                            <div class="instructors {{{instructnum}}}">
                                {{{instructors}}}
                            </div>
                        </div>
                        <div class="editing-row d-flex">
                            {{{course_image_uploader}}}
                            {{{course_header_style}}}
                        </div>
                    </div>
                    {{/contextheader}}
                </div>
                <div class="d-flex flex-wrap page-navbkg">
                    {{#hasnavbar}}
                    <div id="page-navbar">
                        {{{navbar}}}
                    </div>
                    {{/hasnavbar}}
                    <div class="pageheadingbutton ml-auto d-flex">
                        <div class="ml-auto d-flex">
                           <span class="modal-help-trigger" id="modal_help_trigger">
                                <i  class="fa fa-question-circle text-light fa-2x fa-fw align-middle mt-1"
                                    title="Help with Remote Teaching & Learning"
                                    aria-label="Help with Remote Teaching & Learning">
                                </i>
                            </span>
                            {{{pageheadingbutton}}}
                        </div>
                        {{#settingsmenu}}
                            <div class="context-header-settings-menu ml-4">
                                {{{settingsmenu}}}
                            </div>
                        {{/settingsmenu}}
                    </div>
                    <div id="course-header">
                        {{{courseheader}}}
                    </div>
                </div>
            </div>
        </div>
    {{{toggle_course_availability}}}
    {{{course_visibility_info}}}
	{{{declaration_notice}}}
    </div>
</header>

{{#js}}
    require(['theme_uofr_conservatory/lightboxes', 'theme_uofr_conservatory/modal_help_setup'], function(Lightboxes, ModalHelpSetup) {
        Lightboxes.init();
        ModalHelpSetup.init({{context_id}}, '{{local_url}}');
    });
{{/js}}
