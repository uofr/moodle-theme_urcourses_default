{{!
    @template   urcourses_default/course_visibility_toggle
    @author     John Lane

    UI for course visibility toggle.
}}
<div
id="theme_urcourses_default_header_toggle_course_visibility_{{uniqid}}"
class="alert {{#visible}} alert-success{{/visible}}{{^visible}} alert-warning{{/visible}}">
    <div data-region="vis-toggle-loading" class="d-none justify-content-center align-items-center"
    style="position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: white;
    opacity: 75%;">
        {{> core/loading }}
        <span class="ml-2"> Loading... </span>
    </div>
    <div class="mb-2">
        <div>
            {{timestatus_msg}} {{{enrollment_msg}}} {{{availability_msg}}}
        </div>
    </div>
    <div class="d-flex align-items-center">
        <a class="btn btn-link p-0"
        role="button"
        data-toggle="popover"
        data-placement="bottom"
        data-content="{{#str}}coursevisibility_help, core{{/str}}"
        data-html="true"
        tabindex="0"
        data-trigger="focus">
            <i class="icon fa fa-question-circle text-info fa-fw"
            role="img"
            title="Help with Course visibility"
            aria-label="Help with Course visibility">
            </i>
        </a>
        <a href="#" class="btn btn-secondary" data-action="toggle_course_visibility"> {{{availability_button_msg}}} </a>
    </div>
</div>

{{#js}}
require(['theme_urcourses_default/course_visibility_toggle'], function(CourseVisibilityToggle) {
    CourseVisibilityToggle.init(
        '#theme_urcourses_default_header_toggle_course_visibility_{{uniqid}}',
        {{courseid}},
        {{visible}},
        {
        {{#modalstrings}}
                showtitle: '{{{showtitle}}}',
                showbody: '{{{showbody}}}',
                hidetitle: '{{{hidetitle}}}',
                hidebody: '{{{hidebody}}}',
                confirmbutton: '{{{confirmbutton}}}'
        {{/modalstrings}}
        }
    );
});
{{/js}}